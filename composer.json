{
  "name": "greenpeace/planet4-child-theme-nordic",
  "description": "Planet4 Child theme for GP Nordic",
  "type":"wordpress-theme",
  "minimum-stability" : "stable",
  "license": "GPL-3.0+",
  "authors": [
    {
      "name": "Greenpeace Nordic",
      "email": "skoleva@greenpeace.org"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "support": {
    "issues": "https://github.com/greenpeace/planet4-child-theme-nordic/issues",
    "wiki": "https://github.com/greenpeace/planet4-child-theme-nordic/wiki",
    "source": "https://github.com/greenpeace/planet4-child-theme-nordic"
  },
  "extra": {
    "installer-paths": {
      "../../plugins/{$name}/": [
        "wpackagist-plugin/*",
        "type:wordpress-plugin"
      ]
    }
  },
	"require-dev": {
	  "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
	  "phpunit/phpunit": "^6.2",
    "stevegrunwell/phpunit-markup-assertions": "^1.2",
    "squizlabs/php_codesniffer": "^3.5",
    "wp-coding-standards/wpcs": "^2.2.0"

	},
	"scripts": {
	  "fixes": "vendor/squizlabs/php_codesniffer/bin/phpcbf",
	  "sniffs": "vendor/squizlabs/php_codesniffer/bin/phpcs"
	},
  "require": {
  }
}
